<body>
  <div class="container">
    <h1>온도와 부피 관계 시뮬레이션</h1>
    
    <div class="content-wrapper">
      <div class="experiment-container">
        <h2>실험 장치</h2>
        <div class="apparatus">
          <div class="beaker">
            <div class="water"></div>
          </div>
          <div class="syringe">
            <div class="molecules" id="molecules-container"></div>
            <div class="syringe-plunger" id="plunger" style="height: 75%;"></div>
            <div class="syringe-tube"></div>
            <div class="volume-display" id="volume-display">75.0 mL</div>
          </div>
        </div>
        
        <div class="temperature-control">
          <h2>온도 조절</h2>
          <div class="slider-container">
            <input type="range" min="0" max="200" value="20" class="slider" id="temperature-slider">
            <span class="temperature-value" id="temperature-display">20°C</span>
          </div>
        </div>
        
        <button id="run-experiment">실험 실행</button>
        <button id="reset-experiment">초기화</button>
      </div>
      
      <div class="data-container">
        <h2>실험 데이터</h2>
        <table id="data-table">
          <thead>
            <tr>
              <th>물의 온도(°C)</th>
              <th>주사기 속 공기의 부피(mL)</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>20</td>
              <td>75.0</td>
            </tr>
          </tbody>
        </table>
        
        <h2>온도-부피 그래프</h2>
        <div class="chart-container">
          <canvas id="volume-chart"></canvas>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
  <script>
    // DOM 요소
    const temperatureSlider = document.getElementById('temperature-slider');
    const temperatureDisplay = document.getElementById('temperature-display');
    const runExperimentBtn = document.getElementById('run-experiment');
    const resetExperimentBtn = document.getElementById('reset-experiment');
    const dataTable = document.getElementById('data-table').getElementsByTagName('tbody')[0];
    const moleculesContainer = document.getElementById('molecules-container');
    const volumeDisplay = document.getElementById('volume-display');
    const plunger = document.getElementById('plunger');
    
    // 데이터 저장
    let experimentData = [{ temperature: 20, volume: 75.0 }];
    
    // 온도에 따른 부피 계산 (샤를의 법칙: V ∝ T)
    function calculateVolume(temperature) {
      // 20°C를 기준으로 샤를의 법칙 적용 (절대온도로 변환)
      const initialVolume = 75.0;
      const initialTemp = 20 + 273.15; // K
      const currentTemp = temperature + 273.15; // K
      
      const newVolume = initialVolume * (currentTemp / initialTemp);
      return Math.round(newVolume * 10) / 10; // 소수점 첫째자리까지 표시
    }
    
    // 슬라이더 이벤트
    temperatureSlider.addEventListener('input', () => {
      const temperature = temperatureSlider.value;
      temperatureDisplay.textContent = `${temperature}°C`;
    });
    
    // 주사기 피스톤 업데이트
    function updateSyringePlunger(volume) {
      // 부피가 커질수록 피스톤이 위로 올라감 (높이가 줄어듦)
      const maxVolume = 150; // 최대 부피
      const plungerHeight = Math.max(0, 100 - ((volume / maxVolume) * 100));
      plunger.style.height = `${plungerHeight}%`;
      volumeDisplay.textContent = `${volume} mL`;
    }
    
    // 데이터 테이블에 추가
    function addDataToTable(temperature, volume) {
      const existingRow = Array.from(dataTable.rows).find(row => 
        parseInt(row.cells[0].textContent) === temperature
      );
      
      if (existingRow) {
        existingRow.cells[1].textContent = volume;
      } else {
        const newRow = dataTable.insertRow();
        newRow.insertCell(0).textContent = temperature;
        newRow.insertCell(1).textContent = volume;
        
        // 데이터 저장
        experimentData.push({ temperature, volume });
      }
    }
    
    // 차트 업데이트
    function updateChart() {
      // 온도 순으로 정렬
      experimentData.sort((a, b) => a.temperature - b.temperature);
      
      const temperatures = experimentData.map(item => item.temperature);
      const volumes = experimentData.map(item => item.volume);
      
      chart.data.labels = temperatures;
      chart.data.datasets[0].data = volumes;
      chart.update();
    }
    
    // 차트 설정
    const ctx = document.getElementById('volume-chart').getContext('2d');
    const chart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: [20],
        datasets: [{
          label: '기체 부피 (mL)',
          data: [75.0],
          backgroundColor: 'rgba(54, 162, 235, 0.2)',
          borderColor: 'rgba(54, 162, 235, 1)',
          borderWidth: 2,
          pointBackgroundColor: 'rgba(54, 162, 235, 1)',
          pointBorderColor: '#fff',
          pointRadius: 5
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          x: {
            title: {
              display: true,
              text: '온도 (°C)'
            }
          },
          y: {
            title: {
              display: true,
              text: '부피 (mL)'
            },
            min: 0,
            suggestedMax: 150
          }
        }
      }
    });

    // 분자 생성
    function createMolecules() {
      moleculesContainer.innerHTML = '';
      const numberOfMolecules = 30;
      const plungerHeight = parseFloat(plunger.style.height);
      const availableHeight = 100 - plungerHeight;
      
      for (let i = 0; i < numberOfMolecules; i++) {
        const molecule = document.createElement('div');
        molecule.className = 'molecule';
        molecule.style.left = `${Math.random() * 80 + 10}%`;
        molecule.style.top = `${Math.random() * availableHeight}%`;
        moleculesContainer.appendChild(molecule);
      }
    }

    // 분자 움직임 업데이트
    function updateMoleculeMovement(temperature) {
      const molecules = document.querySelectorAll('.molecule');
      const plungerHeight = parseFloat(plunger.style.height);
      const availableHeight = 100 - plungerHeight;
      const speed = 0.5 + (temperature / 20); // 온도에 따른 분자 움직임 속도

      molecules.forEach(molecule => {
        const currentLeft = parseFloat(molecule.style.left);
        const currentTop = parseFloat(molecule.style.top);

        let newLeft = currentLeft + (Math.random() - 0.5) * speed;
        let newTop = currentTop + (Math.random() - 0.5) * speed;

        if (newLeft < 10) newLeft = 10;
        if (newLeft > 90) newLeft = 90;
        if (newTop < 0) newTop = 0;
        if (newTop > availableHeight) newTop = availableHeight;

        molecule.style.left = `${newLeft}%`;
        molecule.style.top = `${newTop}%`;
      });
    }

    // 분자 움직임 애니메이션
    let animationId;
    function startMoleculeAnimation(temperature) {
      if (animationId) cancelAnimationFrame(animationId);

      function animate() {
        updateMoleculeMovement(temperature);
        animationId = requestAnimationFrame(animate);
      }

      animate();
    }

    // 실험 실행
    function runExperiment() {
      const temperature = parseInt(temperatureSlider.value);
      const volume = calculateVolume(temperature);

      // 온도에 따른 물 색상 변경
      const waterElement = document.querySelector('.water');
      const blueColor = Math.max(0, 255 - temperature);
      const redColor = Math.min(255, temperature);
      waterElement.style.backgroundColor = `rgba(${redColor}, 100, ${blueColor}, 0.6)`;

      updateSyringePlunger(volume);
      addDataToTable(temperature, volume);
      updateChart();
      createMolecules();
      startMoleculeAnimation(temperature);
    }

    runExperimentBtn.addEventListener('click', runExperiment);

    resetExperimentBtn.addEventListener('click', () => {
      // 실험 초기화
      experimentData = [{ temperature: 20, volume: 75.0 }];
      dataTable.innerHTML = '';
      const newRow = dataTable.insertRow();
      newRow.insertCell(0).textContent = '20';
      newRow.insertCell(1).textContent = '75.0';

      chart.data.labels = [20];
      chart.data.datasets[0].data = [75.0];
      chart.update();

      temperatureSlider.value = 20;
      temperatureDisplay.textContent = '20°C';
      volumeDisplay.textContent = '75.0 mL';
      plunger.style.height = '75%';
      
      // 물 색상 초기화
      const waterElement = document.querySelector('.water');
      waterElement.style.backgroundColor = 'rgba(135, 206, 235, 0.6)';
      
      // 분자 애니메이션 정지
      if (animationId) {
        cancelAnimationFrame(animationId);
        animationId = null;
      }
      
      // 분자 초기화
      moleculesContainer.innerHTML = '';
    });
    
    // 초기 분자 생성
    createMolecules();
  </script>
</body>
</html>
